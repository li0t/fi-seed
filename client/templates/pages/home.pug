.jumbotron
  .container
    h1(translate='PAGES.HOME.TITLE')
    p(translate='PAGES.HOME.SUBTITLE')

    p
      a.btn.btn-primary.btn-lg(
        href='https://github.com/li0t/liot.studio',
        target='_blank')

        span(translate='PAGES.HOME.LEARN-MORE')
        | &ensp;
        i.fa.fa-angle-double-right

.container
  .row
    .col-md-4
      h2
        i.fa.fa-shield
        | &ensp;
        span(translate='PAGES.HOME.COLUMNS.1.TITLE')

      p
        strong {{ $root.app.title }}&ensp;
        span(translate='PAGES.HOME.COLUMNS.1.BODY')

    .col-md-4
      h2
        i.fa.fa-ban
        | &ensp;
        span(translate='PAGES.HOME.COLUMNS.2.TITLE')

      p(translate='PAGES.HOME.COLUMNS.2.BODY')

    .col-md-4
      h2
        i.fa.fa-paint-brush
        | &ensp;
        span(translate='PAGES.HOME.COLUMNS.3.TITLE')

      p(translate='PAGES.HOME.COLUMNS.3.BODY')

      p
        a.btn.btn-default(
          ng-href='/theme',
          role='button')

          span(translate='PAGES.HOME.COLUMNS.3.VIEW')
          | &ensp;
          i.fa.fa-angle-double-right
